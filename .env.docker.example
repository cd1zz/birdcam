# BirdCam Docker Configuration
# Copy this to .env and customize for your setup

# Security - CHANGE THESE!
SECRET_KEY=your-secret-key-here-change-me
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ADMIN_EMAIL=admin@example.com

# Camera Settings
CAMERA_0_TYPE=opencv          # Options: opencv, picamera2, auto
CAMERA_0_DEVICE=0              # Device index or path
CAMERA_0_RESOLUTION=640x480    # Resolution
CAMERA_0_FPS=10                # Frames per second

# Motion Detection
MOTION_THRESHOLD=5000          # Sensitivity (lower = more sensitive)
MIN_CONTOUR_AREA=500           # Minimum size to detect

# Email Notifications (optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@birdcam.local

# For production deployment with existing services
# CAPTURE_SERVER=http://your-pi-ip:8090
# PROCESSING_SERVER=http://your-server-ip:5001